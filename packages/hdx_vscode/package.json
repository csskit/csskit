{
	"name": "hdx_vscode",
	"displayName": "hdx",
	"version": "1.0.0",
	"description": "Refreshing CSS",
	"keywords": [],
	"repository": "https://github.com/keithamus/hdx",
	"funding": {
		"url": "https://github.com/sponsors/keithamus"
	},
	"license": "MIT",
	"author": "Keith Cirkel (https://keithcirke.co.uk)",
	"type": "commonjs",
	"main": "./src/main.js",
	"files": [
		"./dist"
	],
	"scripts": {
		"check": "prettier --check . && npm run lint && npm run typecheck",
		"fmt": "prettier --write .",
		"lint": "oxlint",
		"typecheck": "tsc",
		"watch": "npm run build -- --watch",
		"watch-test": "vscode-test"
	},
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			}
		],
		"configuration": [],
		"configurationDefaults": {},
		"keybindings": [],
		"problemMatchers": [],
		"problemPatterns": [],
		"semanticTokenModifiers": [],
		"semanticTokenScopes": [
			{
				"scopes": {
					"Tag": [
						"entity.name.tag.css"
					],
					"Tag.Unknown": [
						"invalid",
						"meta.selector.css"
					],
					"Tag.Experimental": [
						"entity.name.tag.css"
					],
					"Tag.Deprecated": [
						"invalid.deprecated",
						"entity.name.tag.css"
					],
					"Tag.Vendor": [
						"invalid.deprecated",
						"entity.name.tag.css"
					],
					"Declaration": [
						"support.type.property-name.css"
					],
					"Declaration.Unknown": [
						"invalid",
						"meta.property-name.css"
					],
					"Declaration.Deprecated": [
						"invalid.deprecated",
						"meta.property-name.css"
					],
					"Declaration.Vendor": [
						"invalid.deprecated",
						"meta.property-name.css"
					],
					"Declaration.Custom": [
						"variable.css",
						"meta.property-list.css"
					],
					"PseudoClass": [
						"entity.other.attribute-name.pseudo-class.css"
					],
					"PseudoElement": [
						"entity.other.attribute-name.pseudo-element.css"
					],
					"PseudoClass.Vendor": [
						"invalid.deprecated",
						"entity.other.attribute-name.pseudo-class.css"
					],
					"PseudoElement.Vendor": [
						"invalid.deprecated",
						"entity.other.attribute-name.pseudo-element.css"
					],
					"Id": [
						"entity.other.attribute-name.id"
					],
					"Punctuation": [
						"punctuation.section",
						"source.css"
					]
				}
			}
		],
		"semanticTokenTypes": [],
		"snippets": [],
		"taskDefinitions": [],
		"views": [],
		"walkthroughs": []
	},
	"activationEvents": ["onLanguage:css"],
	"dependencies": {
		"@vscode/test-cli": "^0.0.10",
		"vscode-languageclient": "^9.0.1"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.10.1",
		"@types/vscode": "^1.95.0",
		"@typescript-eslint/eslint-plugin": "^8.16.0",
		"@typescript-eslint/parser": "^8.16.0",
		"@vscode/test-electron": "^2.4.1",
		"esbuild": "^0.24.0",
		"mocha": "^11.0.0",
		"oxlint": "^0.15.0",
		"prettier": "^3.4.1",
		"tinyglobby": "^0.2.10",
		"typescript": "^5.7.2",
		"vscode": "^1.1.34"
	},
	"engines": {
		"vscode": "^1.95.0"
	},
	"prettierConfig": {
		"useTabs": true,
		"printWidth": 120
	}
}
